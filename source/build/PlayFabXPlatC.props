<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup Label="Paths">
    <PlayFabRoot>$(MSBuildThisFileDirectory)..\</PlayFabRoot>
    <ExternalDir>$(PlayFabRoot)external</ExternalDir>
    <PlayFabSourceDir>$(PlayFabRoot)code</PlayFabSourceDir>
    <PlayFabTestDir>$(PlayFabRoot)test</PlayFabTestDir>
  </PropertyGroup>

  <!--Reuse libHttpClient platform detection logic-->
  <Import Condition="'$(HCPlatform)' == ''" Project="$(ExternalDir)\libHttpClient\platform_select.props" />
  <PropertyGroup>
    <!--rename to XPlatCWin32 for consistency-->
    <PlayFabPlatform Condition="'$(HCPlatform)' == 'Win32'">Windows</PlayFabPlatform>
    <PlayFabPlatform Condition="'$(HCPlatform)' != 'Win32'">$(HCPlatform)</PlayFabPlatform>
    <PlayFabProjectName>XPlatC$(PlayFabPlatform)</PlayFabProjectName>
  </PropertyGroup>

  <ItemDefinitionGroup>
    <ClCompile>
      <!--Remove internal dirs from here-->
      <AdditionalIncludeDirectories>%(AdditionalIncludeDirectories);$(PlayFabSourceDir);$(PlayFabSourceDir)/include;$(PlayFabSourceDir)/source/playfab;$(PlayFabSourceDir)/source</AdditionalIncludeDirectories>
    </ClCompile>
    <Lib>
      <AdditionalDependencies>ws2_32.lib;winhttp.lib;%(AdditionalDependencies)</AdditionalDependencies>
    </Lib>
  </ItemDefinitionGroup>

  <!--Add reference to appropriate PlayFab static lib-->
  <ItemGroup Label="PlayFab project reference" Condition="'$(PlayFabExcludeProjectReferences)' != 'true'">
    <ProjectReference Include="$(PlayFabRoot)Build\$(PlayFabPlatform)\$(PlayFabProjectName).vcxproj">
      <Project>{92F6EC5F-B66C-4572-A74D-79329AFF3129}</Project>
    </ProjectReference>
  </ItemGroup>

  <!--RapidJSON dependency-->
  <PropertyGroup Label="RapidJson">
    <RapidJsonSdkRoot>$(PlayFabRoot)External\rapidjson\</RapidJsonSdkRoot>
    <RapidJsonSdkInclude>$(RapidJsonSdkRoot)include\</RapidJsonSdkInclude>
  </PropertyGroup>
  
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>%(AdditionalIncludeDirectories);$(RapidJsonSdkInclude)</AdditionalIncludeDirectories>
      <PreprocessorDefinitions>RAPIDJSON_NO_INT64DEFINE;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
  </ItemDefinitionGroup>

  <!--LibHttpClient dependency-->
  <Import Project="$(ExternalDir)\libHttpClient\libHttpClient.props" />
</Project>